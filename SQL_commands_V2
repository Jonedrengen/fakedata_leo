CREATE TABLE [GenEpiBioTrain].[SampleSequenced](
    [SampleSequencedID] [nvarchar](200) NOT NULL,
    [SequencingType] [nvarchar](50) NULL,
    [DateSequencing] [date] NULL,
    [SampleContent] [nvarchar](50) NULL,
