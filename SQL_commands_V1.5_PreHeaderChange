GO
SET QUOTED_IDENTIFIER ON
GO
CREATE TABLE [Jon].[Sample](
    [SampleID] [nvarchar](50) NOT NULL,
    [Host] [nvarchar](50) NULL,
    [Ct] [decimal](18, 13) NULL,
    [DateSampling] [date] NULL,
